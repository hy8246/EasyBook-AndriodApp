<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/register_logo"
        android:src="@drawable/logo1"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear"
        android:layout_marginLeft="10dp">
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="  Email"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:layout_below="@id/register_logo"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:id="@+id/reg_email"
        android:background="@drawable/custom_edittext"

        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/reg_email"
        android:inputType="textPassword"
        android:hint="  Password"
        android:paddingLeft="5dp"
        android:id="@+id/reg_PW"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:background="@drawable/custom_edittext"
        android:maxLines="1"
        android:layout_marginTop="4dp"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:hint="  Confirm Password"
        android:id="@+id/reg_CPW"
        android:paddingLeft="5dp"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:background="@drawable/custom_edittext"
        android:maxLines="1"
        android:layout_marginTop="4dp"

        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="  First Name"
        android:id="@+id/reg_FN"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:background="@drawable/custom_edittext"
        android:maxLines="1"
        android:layout_marginTop="4dp"
        android:paddingLeft="5dp"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="  Last Name"
        android:id="@+id/reg_LN"
        android:textColorHint="#000000"
        android:paddingLeft="5dp"
        android:textColor="#000000"
        android:background="@drawable/custom_edittext"
        android:maxLines="1"
        android:layout_marginTop="4dp"
        />
    <RadioGroup
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/reg_gender"
        android:layout_marginTop="10dp"
        >

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Male"
            android:id="@+id/reg_rb_m"
            android:textColor="#000000"
            android:background="@drawable/custom_radio_btn"/>
        <RadioButton
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Female"
            android:id="@+id/reg_rb_f"
            android:textColor="#000000"
            android:background="@drawable/custom_radio_btn"
            />
    </RadioGroup>

        <EditText
            android:id="@+id/reg_iid"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_edittext"
            android:hint="  ID Number"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/reg_phone"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_edittext"
            android:hint="  Phone(Optional)"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_marginTop="4dp"
            android:maxLines="1"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:layout_below="@id/linear"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_btn"
        android:text="Register"
        android:id="@+id/register_btn"
        android:layout_marginLeft="90dp"
        >
    </Button>

    <Button
        android:id="@+id/register_return_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/register_btn"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_btn"
        android:text="Menu">

    </Button>
</LinearLayout>