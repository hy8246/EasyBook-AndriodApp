<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/search_logo"
        android:src ="@drawable/logo1"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/search_logo"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:id= "@+id/search_book_name"
        android:maxLines = "1"
        android:hint="Book Name" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/search_book_name"
        android:maxLines = "1"
        android:layout_marginTop="20dp"
        android:id="@+id/search_book_author"
        android:layout_gravity="center_horizontal"
        android:hint="Author Name"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/search_book_author"
        android:text="Search"
        android:id="@+id/search_search_btn"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_btn"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/search_book_author"
        android:id="@+id/search_menu_btn"
        android:text="Menu"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_btn"/>

</LinearLayout>